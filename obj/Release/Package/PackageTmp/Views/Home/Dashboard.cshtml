@model IEnumerable<CycleCountSystem__CSS_.Models.TB_Inventory>

@using System.Globalization

@{
    Layout = "";
    ViewBag.Title = "Dashboard";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>CCE System - Dashboard</title>

    <!-- Custom fonts for this template-->
    <link href="~/Theme/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Theme/css/sb-admin-2.css" rel="stylesheet" />

    <!-- Custom styles for this page -->
    <link href="~/Theme/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">
        @Html.Action("Sidebar", "Home")
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <form class="form-inline">
                        <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                            <i class="fa fa-bars"></i>
                        </button>
                    </form>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <!-- Nav Item - Search Dropdown (Visible Only XS) -->
                        <li class="nav-item dropdown no-arrow d-sm-none">
                            <a class="nav-link dropdown-toggle" href="#" id="searchDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-search fa-fw"></i>
                            </a>
                            <!-- Dropdown - Messages -->
                            <div class="dropdown-menu dropdown-menu-right p-3 shadow animated--grow-in"
                                 aria-labelledby="searchDropdown">
                                <form class="form-inline mr-auto w-100 navbar-search">
                                    <div class="input-group">
                                        <input type="text" class="form-control bg-light border-0 small"
                                               placeholder="Search for..." aria-label="Search"
                                               aria-describedby="basic-addon2">
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="button">
                                                <i class="fas fa-search fa-sm"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </li>

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">@User.Identity.Name</span>
                                <img class="img-profile rounded-circle"
                                     src="~/Theme/img/undraw_profile.svg">
                            </a>
                            <!-- Dropdown - User Information -->
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
                    </div>
                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">LIST DATA CYCLE COUNT</h6>
                            <div class="dropdown text-right">
                                <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Pilih Kategori
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink" id="kategoriDropdown">
                                    <a href="@Url.Action("FilterByCategory", "Home", new { category = "Kategori All" })" class="dropdown-item">All</a>
                                    <a href="@Url.Action("FilterByCategory", "Home", new { category = "Kategori 1" })" class="dropdown-item">Kategori 1: ITR 3,00 sampai 2,50</a>
                                    <a href="@Url.Action("FilterByCategory", "Home", new { category = "Kategori 2" })" class="dropdown-item">Kategori 2: ITR 2,49 sampai 1,00</a>
                                    <a href="@Url.Action("FilterByCategory", "Home", new { category = "Kategori 3" })" class="dropdown-item">Kategori 3: ITR 0,99 sampai 0,00</a>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead style="background-color: #84B6A7">
                                        <tr style="color:aliceblue">
                                            <th>NO</th>
                                            <th>Material ID</th>
                                            <th>Product Description</th>
                                            <th>Batch Number</th>
                                            <th>Storage Bin</th>
                                            <th>Quantity</th>
                                            <th>ITR</th>
                                            <th>Action</th>
                                            <th>Remarks</th>
                                        </tr>
                                    </thead>
                                    <tfoot style="background-color: #84B6A7">
                                        <tr style="color:aliceblue">
                                            <th>NO</th>
                                            <th>Material ID</th>
                                            <th>Product Description</th>
                                            <th>Batch Number</th>
                                            <th>Storage Bin</th>
                                            <th>Quantity</th>
                                            <th>ITR</th>
                                            <th>Action</th>
                                            <th>Remarks</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @{
                                            int counter = 1;
                                        }

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @counter
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Id_material)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Mat_description)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Batch_number)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Bin)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Qty)
                                                </td>
                                                @{
                                                    Func<decimal?, string> GetITRColorClass = (decimal? itr) =>
                                                    {
                                                        if (itr.HasValue)
                                                        {
                                                            if (itr >= 2.5M && itr <= 3.0M)
                                                            {
                                                                return "green-class";
                                                            }
                                                            else if (itr >= 1.0M && itr <= 2.49M)
                                                            {
                                                                return "yellow-class";
                                                            }
                                                            else if (itr >= 0.0M && itr <= 0.99M)
                                                            {
                                                                return "blue-class";
                                                            }
                                                        }
                                                        return "default-class";
                                                    };
                                                }

                                                <style>
                                                    .green-class {
                                                        background-color: lightgreen;
                                                    }

                                                    .yellow-class {
                                                        background-color: yellow;
                                                    }

                                                    .blue-class {
                                                        background-color: lightskyblue;
                                                    }

                                                    .default-class {
                                                        /* Style default class jika dibutuhkan */
                                                    }
                                                </style>

                                                @{
                                                    // Konversi nilai ITR menjadi decimal?
                                                    decimal? itrValue = null;
                                                    if (!string.IsNullOrEmpty(item.ITR))
                                                    {
                                                        decimal parsedItrValue;
                                                        if (decimal.TryParse(item.ITR.Replace(",", "."), NumberStyles.AllowDecimalPoint, CultureInfo.InvariantCulture, out parsedItrValue))
                                                        {
                                                            itrValue = parsedItrValue;
                                                        }
                                                    }
                                                }

                                                <td class="@GetITRColorClass(itrValue)">
                                                    @Html.DisplayFor(modelItem => item.ITR)
                                                </td>

                                                <td>
                                                    <a class="btn btn-info cycle-count-button" href="@Url.Action("Create", "Cyclecount", new { id = item.Id_Inventory })">
                                                        <i class="fas fa-fw fa-calculator"></i> Calculate
                                                    </a>
                                                </td>

                                                <td>
                                                    @if (item.Calculate != null && (bool)item.Calculate)
                                                    {
                                                        <a class="btn btn-success cycle-count-button" disabled>
                                                            <i class="fas fa-fw fa-check"></i> Success
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a class="btn btn-danger cycle-count-button" href="@Url.Action("Create", "Cyclecount", new { id = item.Id_Inventory })">
                                                            <i class="fas fa-fw fa-calculator"></i> False
                                                        </a>
                                                    }
                                                </td>
                                            </tr>

                                            counter++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /.container-fluid -->
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4" style="padding-left: 1rem">
                        <h1 class="h3 mb-0 text-gray-800">Highlight</h1>
                    </div>

                    <div class="row">
                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col-xl-4 col-md-6 mb-4 mx-auto">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xl-left font-weight-bold text-primary text-uppercase mb-1">
                                                Cycle Count
                                            </div>
                                            <div class="text-xl-left font-weight-bold text-primary text-uppercase mb-1">
                                                Module
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col-xl-4 col-md-6 mb-4 mx-auto ">
                            <div class="card border-left-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xl-left font-weight-bold text-info text-uppercase mb-1">
                                                ITR (Inventory Turnover Ratio)
                                            </div>
                                            <div class="text-x font-weight-bold text-info text-uppercase mb-1">
                                                Data
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End of Main Content -->
                <!-- Footer -->
                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>Copyright &copy; Logistics Department 2023</span>>
                        </div>
                    </div>
                </footer>
                <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

        </div>
        <!-- End of Page Wrapper -->
        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>

        <!-- Logout Modal-->
        <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        <a class="btn btn-primary" href="login.html">Logout</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bootstrap core JavaScript-->
        <script src="~/Theme/vendor/jquery/jquery.min.js"></script>
        <script src="~/Theme/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="~/Theme/vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="~/Theme/js/sb-admin-2.min.js"></script>

        <!-- Page level plugins -->
        <script src="~/Theme/vendor/datatables/jquery.dataTables.min.js"></script>
        <script src="~/Theme/vendor/datatables/dataTables.bootstrap4.min.js"></script>

        <!-- Page level custom scripts -->
        <script src="~/Theme/js/demo/datatables-demo.js"></script>
    </div>
</body>

</html>
